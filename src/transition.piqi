.enum [
  .name transition-type
  .option [.name targetless]
  .option [.name internal]
  .option [.name spontaneous]
  .option [.name history]
  .option [.name initial]
]

.record [
  .name transition

  .field [
    .name type
    .type transition-type
    .optional
    .default.targetless
  ]

  .field [
    .name idx
    .type uint
  ]

  .field [
    .name source
    .type ref
  ]

  .field [
    .name events
    .type string
    .repeated
  ]

  .field [
    .name condition
    .type expression
    .optional
  ]

  .field [
    .name on-transition
    .type expression
    .repeated
  ]

  .field [
    .name targets
    .type ref
    .repeated
  ]

  .field [
    .name conflicts
    .type ref
    .repeated
  ]

  .field [
    .name exits
    .type ref
    .repeated
  ]
]
